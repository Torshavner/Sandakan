# Application Environment (local, test, prod)
APP_ENVIRONMENT=local

# Override appsettings values via environment variables
# Use APP_ prefix and _ separator
# Examples:

# Server configuration
# APP_SERVER_HOST=127.0.0.1
# APP_SERVER_PORT=3000

# Qdrant configuration
# APP_QDRANT_URL=http://localhost:6334
# APP_QDRANT_COLLECTION_NAME=rag_chunks

# LLM configuration (REQUIRED)
APP_LLM_API_KEY=your_openai_api_key_here
# APP_LLM_CHAT_MODEL=gpt-4o-mini
# APP_LLM_MAX_TOKENS=4096
# APP_LLM_TEMPERATURE=0.7

# Embeddings configuration
# APP_EMBEDDINGS_MODEL=text-embedding-3-small
# APP_EMBEDDINGS_STRATEGY=semantic
# APP_EMBEDDINGS_DIMENSION=1536
# APP_EMBEDDINGS_CHUNK_OVERLAP=50

# Chunking configuration
# APP_CHUNKING_MAX_CHUNK_SIZE=512
# APP_CHUNKING_OVERLAP_TOKENS=50

# Logging configuration
# APP_LOGGING_LEVEL=debug
# APP_LOGGING_ENABLE_JSON=false
# APP_LOGGING_ENABLE_UDP=true

# Extraction configuration
# APP_EXTRACTION_PDF_ENABLED=true
# APP_EXTRACTION_PDF_MAX_FILE_SIZE_MB=50
# APP_EXTRACTION_AUDIO_ENABLED=true
# APP_EXTRACTION_AUDIO_MAX_FILE_SIZE_MB=100
# APP_EXTRACTION_AUDIO_WHISPER_MODEL=base

# Scaffold mode
# SCAFFOLD_MODE=false
# MOCK_RESPONSE_DELAY=0
