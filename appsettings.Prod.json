{
  "server": {
    "host": "0.0.0.0",
    "port": 8080
  },
  "qdrant": {
    "url": "http://qdrant:6334",
    "collection_name": "rag_chunks"
  },
  "database": {
    "url": "postgres://sandakan:sandakan@postgres:5432/sandakan",
    "max_connections": 20,
    "run_migrations": true
  },
  "embeddings": {
    "provider": "openai",
    "model": "text-embedding-3-small",
    "strategy": "semantic",
    "dimension": 1536,
    "chunk_overlap": 100
  },
  "chunking": {
    "max_chunk_size": 1024,
    "overlap_tokens": 100
  },
  "llm": {
    "api_key": "",
    "chat_model": "gpt-4o",
    "max_tokens": 8192,
    "temperature": 0.5
  },
  "logging": {
    "level": "warn",
    "enable_json": true,
    "enable_udp": false
  },
  "extraction": {
    "pdf": {
      "enabled": true,
      "max_file_size_mb": 100
    },
    "audio": {
      "enabled": true,
      "max_file_size_mb": 200,
      "whisper_model": "medium"
    }
  },
  "rag": {
    "similarity_threshold": 0.7,
    "max_context_tokens": 6144,
    "top_k": 10,
    "system_prompt": "You are a helpful assistant. Answer the user's question using ONLY the provided context. If the context does not contain enough information to answer, say so. Do not use any external knowledge.\n\nContext:\n{context}",
    "fallback_message": "I cannot answer this based on the available lecture notes."
  }
}
