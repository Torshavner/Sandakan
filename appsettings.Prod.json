{
  "server": {
    "host": "0.0.0.0",
    "port": 8080
  },
  "qdrant": {
    "url": "http://qdrant:6334",
    "collection_name": "ai-academy-chunks"
  },
  "database": {
    "url": "postgres://sandakan:sandakan@postgres:5432/sandakan",
    "max_connections": 20,
    "run_migrations": true
  },
  "embeddings": {
    "provider": "openai",
    "model": "text-embedding-3-small",
    "dimension": 1536,
    "chunk_overlap": 100
  },
  "chunking": {
    "max_chunk_size": 1024,
    "overlap_tokens": 100,
    "strategy": "semantic"
  },
  "llm": {
    "provider": "azure",
    "api_key": "${AZURE_OPENAI_API_KEY}",
    "azure_endpoint": "https://<resource>.openai.azure.com",
    "chat_model": "gpt-4o",
    "max_tokens": 4096,
    "temperature": 0.3,
    "sse_keep_alive_seconds": 15
  },
  "logging": {
    "level": "warn",
    "enable_json": true,
    "enable_udp": false
  },
  "storage": {
    "provider": "azure",
    "local_path": "./uploads",
    "max_upload_size_bytes": 1073741824,
    "azure_account": "${AZURE_STORAGE_ACCOUNT}",
    "azure_access_key": "${AZURE_STORAGE_ACCESS_KEY}",
    "azure_container": "${AZURE_STORAGE_CONTAINER}"
  },
  "extraction": {
    "pdf": {
      "enabled": true,
      "max_file_size_mb": 100,
      "provider": "azure",
      "azure_endpoint": "${AZURE_DOC_INTEL_ENDPOINT}",
      "azure_key": "${AZURE_DOC_INTEL_KEY}"
    },
    "audio": {
      "enabled": true,
      "max_file_size_mb": 200,
      "whisper_model": "openai/whisper-medium",
      "provider": "openai"
    },
    "video": {
      "enabled": true,
      "max_file_size_mb": 1000
    }
  },
  "rag": {
    "similarity_threshold": 0.7,
    "max_context_tokens": 6144,
    "top_k": 10,
    "system_prompt": "You are a helpful assistant. Answer the user's question using ONLY the provided context. If the context does not contain enough information to answer, say so. Do not use any external knowledge.\n\nContext:\n{context}",
    "fallback_message": "I cannot answer this based on the available lecture notes."
  }
}
